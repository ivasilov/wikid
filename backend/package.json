{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "start": "node build/index.js",
    "build": "tsc --project tsconfig.build.json",
    "watch": "tsc -w --project tsconfig.build.json",
    "monitor": "nodemon -e js -w build -d 1 build/index.js",
    "develop": "yarn build && run-p watch monitor",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test": "jest",
    "test:watch": "yarn test -- --watch",
    "test:notify": "yarn run test:watch -- --notify",
    "coverage": "yarn test -- --coverage",
    "coverage:notify": "yarn run coverage -- --watch --notify",
    "clean": "run-p clean:*",
    "clean:build": "rimraf build/",
    "clean:modules": "rimraf node_modules",
    "db:seed": "fixtures ./fixtures",
    "migration:generate": "typeorm migration:generate -d src/migrations -n ",
    "migration:run": "yarn clean:build && yarn build && typeorm migration:run"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.7",
    "@nestjs/core": "^7.0.7",
    "@nestjs/graphql": "^7.2.1",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^7.0.7",
    "@nestjs/serve-static": "^2.1.1",
    "apollo-server-express": "^2.12.0",
    "connect-typeorm": "^1.1.3",
    "graphql": "^14.0.0",
    "graphql-tools": "^4.0.7",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.0.2",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "typeorm": "^0.2.24",
    "typeorm-static": "^1.1.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.0.7",
    "@types/jest": "^24.0.0",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/node": "^12.0.0",
    "@types/passport": "^1.0.3",
    "@types/passport-jwt": "^3.0.3",
    "@types/supertest": "^2.0.9",
    "jest": "^24.0.0",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.3",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.0",
    "typeorm-fixtures-cli": "^1.6.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
